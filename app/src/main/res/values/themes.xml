<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CuidaPOA" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_teal</item>
        <item name="colorPrimaryVariant">@color/primary_teal_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_blue</item>
        <item name="colorSecondaryVariant">@color/accent_blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/text_dark</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_dark</item>

        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_teal_dark</item>

        <!-- Typography -->
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <!-- Main Theme -->
    <style name="Theme.CuidaPOA" parent="Base.Theme.CuidaPOA" />

    <!-- Splash Screen Theme -->
    <style name="Theme.CuidaPOA.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_teal</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.CuidaPOA</item>
    </style>

    <!-- Toolbar Style -->
    <style name="Widget.CuidaPOA.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/primary_teal</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.CuidaPOA.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.CuidaPOA.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="backgroundTint">@color/primary_teal</item>
    </style>

    <style name="Widget.CuidaPOA.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- TextInputLayout Style -->
    <style name="Widget.CuidaPOA.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_teal</item>
        <item name="hintTextColor">@color/primary_teal</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

</resources>